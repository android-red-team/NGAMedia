<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="nga.ngamedia.AboutActivity"
    tools:showIn="@layout/app_bar_about">


    <TextView
        android:text="This app was created by 3 BCIT Students. Kwanchanok Sonsoi, Alex Zhang and Gerard Ng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/textView2"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="277dp"
        android:layout_height="182dp"
        android:layout_gravity="center"
        android:src="@drawable/nga_logo"
        android:id="@+id/imageView2"
        android:layout_weight="0.24" />


    <TextView
        android:text="@string/tmdb_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/textView3"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="228dp"
        android:layout_height="157dp"
        android:layout_gravity="center"
        android:src="@drawable/tmdb_logo"
        android:id="@+id/imageView3"
        android:layout_weight="0.24"/>

    <TextView
        android:text="@string/copyright"
        android:id="@+id/cpright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>
</LinearLayout>
